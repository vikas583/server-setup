    "pgvector": "^0.2.0",
    "reflect-metadata": "^0.2.2",
    "routing-controllers": "^0.10.4",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.2.0",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.20",
    "typescript": "^5.5.3",
    "uuid": "^10.0.0",
    "winston": "^3.13.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@azure/communication-email": "^1.0.0",
