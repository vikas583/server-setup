  "scripts": {
    "build": "tsc && npm run copy-templates",
    "gen-env": "gen-env-types .env.example -o src/env.d.ts -e .",
    "dev": "cross-env NODE_ENV=development npm run copy-templates && tsc-watch --onSuccess \"node dist/index.js\"",
    "start": "node dist/index.js",
    "listen": "npm run build && node dist/queueListener.js",
    "listen:dev": "cross-env NODE_ENV=development npm run copy-templates && tsc-watch --onSuccess \"node dist/queueListener.js email\"",
    "copy-templates": "cpx \"src/emailTemplates/**/*\" dist/emailTemplates"
  },
  "dependencies": {
    "@types/amqplib": "^0.10.5",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
